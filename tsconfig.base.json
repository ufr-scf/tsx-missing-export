{
  "compilerOptions": {
    "composite": true,
    // "declaration": true,
    // "declarationMap": true,
    "incremental": true,

    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,

    "preserveConstEnums": true,

    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  }
}
